<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF"
    android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android" 
    xmlns:attr="http://schemas.android.com/apk/res/com.example.nb_iotutility">
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"  
        android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="128dp"
        android:layout_height="120dp"
        android:layout_x="119dp"
        android:layout_y="92dp"
        android:src="@drawable/eric_logo" />
    
    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="爱立信NB-IoT信号诊断工具"
        android:textColor="#220011"
        android:gravity="center" 
        android:textSize="24dp" />
    
    <TextView
        android:id="@+id/textView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_x="69dp"
        android:layout_y="546dp"
        android:layout_marginTop="10dp"
        android:gravity="center" 
        android:text="(爱立信上海WILD-C&amp;OpenIoT Lab.)" />
    

		
<com.example.nb_iotutility.MyImageView 
        android:src="@drawable/radio_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        attr:auto_play="true"
        />        
    </LinearLayout>
    
</AbsoluteLayout>